    <br />
  </div>
  <div class ="form_space">
    <label for="description-field">Description:</label>
    <input class="new_form" type="text" name="description" id="description-field" value="<%= @gym_class.description %>" />
    <br />
  </div>
  <div class ="form_space">
    <label for="teacher-field">Teacher:</label>
    <input class="new_form" type="text" name="teacher" id="teacher-field" value="<%= @gym_class.teacher %>" />
